<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" prefHeight="550.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Yeni Kullanıcı Kaydı">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <ComboBox fx:id="userTypeComboBox" promptText="Kullanıcı Tipi Seçin">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </ComboBox>
        <TextField fx:id="usernameField" promptText="Kullanıcı Adı" />
        <PasswordField fx:id="passwordField" promptText="Şifre" />
        <PasswordField fx:id="confirmPasswordField" promptText="Şifre Tekrar" />
        <TextField fx:id="nameField" promptText="Ad" />
        <TextField fx:id="surnameField" promptText="Soyad" />
        <TextField fx:id="phoneNumberField" promptText="Telefon Numarası" />
        <TextField fx:id="emailField" promptText="E-posta" />

        <TextField fx:id="specializationField" promptText="Uzmanlık Alanı" visible="false" managed="false" />
        <TextField fx:id="dateOfBirthField" promptText="Doğum Tarihi (GG.AA.YYYY)" visible="false" managed="false" />
        <TextField fx:id="bloodGroupField" promptText="Kan Grubu" visible="false" managed="false" />

        <Label fx:id="messageLabel" textFill="#ff0000" />
        <Button onAction="#handleRegisterButton" prefWidth="200.0" text="Kayıt Ol" />
        <Button onAction="#handleBackButton" prefWidth="200.0" text="Geri Dön" />
    </children>
</VBox>