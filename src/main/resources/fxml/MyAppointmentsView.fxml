<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="500.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MyAppointmentsController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="480.0" prefWidth="760.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Randevularım">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="welcomeLabel" text="Randevularınız yüklendi." />

                <TableView fx:id="apptsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateCol" prefWidth="100.0" text="Tarih" />
                        <TableColumn fx:id="timeCol" prefWidth="80.0" text="Saat" />
                        <TableColumn fx:id="doctorCol" prefWidth="200.0" text="Doktor Adı" />
                        <TableColumn fx:id="specialtyCol" prefWidth="150.0" text="Uzmanlık" />
                        <TableColumn fx:id="statusCol" prefWidth="100.0" text="Durum" />
                        <TableColumn fx:id="cancelCol" prefWidth="100.0" text="İşlem" /> </columns>
                </TableView>
                <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefreshAppts" text="Randevuları Yenile" />
            </children>
        </VBox>
    </children>
</AnchorPane>