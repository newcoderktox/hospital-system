<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox styleClass="create-appointment-container" alignment="TOP_CENTER" prefHeight="480.0" prefWidth="760.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.CreateAppointmentController">
    <children>
        <Label text="Yeni Randevu Oluştur">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label text="Lütfen aşağıdaki bilgileri doldurun:" />

        <VBox spacing="10.0">
            <children>
                <Label text="Doktor Seçin:" />
                <ComboBox fx:id="doctorComboBox" prefWidth="200.0" promptText="Doktor Seçin" />

                <Label text="Tarih Seçin:" />
                <DatePicker fx:id="datePicker" promptText="Tarih Seçin" />

                <Label text="Saat Seçin:" />
                <ComboBox fx:id="timeComboBox" prefWidth="200.0" promptText="Saat Seçin" />
            </children>
        </VBox>

        <Label fx:id="loadingTimeSlotsLabel" text="Müsait saatler yükleniyor..." visible="false">
            <font>
                <Font size="11.0" />
            </font>
        </Label>

        <Button fx:id="createAppointmentButton" mnemonicParsing="false" onAction="#handleCreateAppointment" text="Randevu Oluştur" disable="true" />

        <Label fx:id="messageLabel" textFill="RED" wrapText="true" />

        <Label fx:id="doctorMessageLabel" text="Sadece hastalar randevu oluşturabilir." textFill="#dc3545" visible="false">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>